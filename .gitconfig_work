[user]
	name = Sam Morrison
	email = sam.d.morrison@pwc.com
[core]
	editor = vim
	excludesfile = $HOME/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  #log - short form
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  #log - show commited files
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  #log - no color
  lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
  #log - oneline & dates
  lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  #log - oneline & relative dates
  ldr = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
  #log - default
  le = log --oneline --decorate
  #history of a file with diffs
  fl = log -u
  #show modified files in last commit
  dl = "!git ll -1"
  #show diff last commit
  dlc = diff --cached HEAD^
  #list aliases
  la = "!git config -l | grep alias | cut -c 7-"
  st = status -s
  cl = clone
  ci = commit
  co = checkout
  br = branch
  diff = diff --word-diff
  dc = diff --cached
	d = difftool
