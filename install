#! /bin/sh

declare -a DOTFILES=(
.vimrc
.zshrc
)

# TODO: figure out how to have a work and a personal version of my gitconfig

function symlink_dotfiles {
  echo 'creating symlinks for dotfiles'
  for dotfile in ${DOTFILES[@]}; do
    echo " - ${dotfile}"
    ln -sf "${PWD}/${dotfile}" "${HOME}/${dotfile}"
  done
}

function install {
  symlink_dotfiles
}

install
