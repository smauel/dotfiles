# -----------------------------------------------------
# ALIASES
# -----------------------------------------------------

# -----------------------------------------------------
# General
# -----------------------------------------------------
alias cc='clear'
alias ls='eza -a --icons=always'
alias ll='eza -al --icons=always'
alias lt='eza -a --tree --level=1 --icons=always'
alias shutdown='systemctl poweroff'
alias v='$EDITOR'
alias vim='$EDITOR'
alias wifi='nmtui'
alias x='exit'
alias f='$EDITOR "$(fzf)"'

# -----------------------------------------------------
# Git
# -----------------------------------------------------
alias gs='git status -s'
alias gd='git diff'
alias gap='git add -p'
alias dev-commit='git commit -am "Dev commit"'
